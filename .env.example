# =============================================
# VoiceFlow Pro - Environment Variables
# =============================================
# Copy this file to .env.local and fill in your values
#
# NOTE: Customer integration credentials (Salesforce, HubSpot, Slack, etc.)
# are NOT stored here. They are obtained via OAuth and stored in the
# database `integrations` table per organization.

# =============================================
# APP SETTINGS
# =============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="VoiceFlow Pro"
NODE_ENV=development

# =============================================
# DATABASE (PostgreSQL)
# =============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voiceflow_pro
DB_USER=postgres
DB_PASSWORD=your_password_here

# =============================================
# AUTHENTICATION
# =============================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-min-32-characters

# JWT for API tokens
JWT_SECRET=your-jwt-secret-here-min-32-characters

# =============================================
# AI PROVIDERS (Platform-level - we pay)
# =============================================

# OpenAI (LLM for conversation)
OPENAI_API_KEY=sk-...

# Deepgram (Speech-to-Text)
DEEPGRAM_API_KEY=

# ElevenLabs (Text-to-Speech)
ELEVENLABS_API_KEY=

# =============================================
# VOICE INFRASTRUCTURE (Platform-level)
# =============================================

# LiveKit (Voice orchestration)
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=
LIVEKIT_URL=wss://your-livekit-server.livekit.cloud

# =============================================
# TELEPHONY (Platform-level - we provision numbers)
# =============================================

# Twilio (Primary)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# Telnyx (Backup/Alternative)
TELNYX_API_KEY=

# =============================================
# BILLING (Platform-level - customers pay us)
# =============================================

# Stripe
STRIPE_SECRET_KEY=sk_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_...

# =============================================
# STORAGE (Platform-level)
# =============================================

# AWS S3 (for call recordings)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=voiceflow-recordings
AWS_REGION=us-east-1

# Redis (caching & real-time)
REDIS_URL=redis://localhost:6379

# =============================================
# OAUTH APP CREDENTIALS (For customer OAuth flows)
# =============================================
# These are OUR app credentials registered with each provider.
# When customers connect, they authorize OUR app to access THEIR data.

# Google (for customer calendar integration)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# Microsoft (for customer Outlook calendar)
MICROSOFT_OAUTH_CLIENT_ID=
MICROSOFT_OAUTH_CLIENT_SECRET=

# Salesforce (for customer CRM integration)
SALESFORCE_OAUTH_CLIENT_ID=
SALESFORCE_OAUTH_CLIENT_SECRET=

# HubSpot (for customer CRM integration)
HUBSPOT_OAUTH_CLIENT_ID=
HUBSPOT_OAUTH_CLIENT_SECRET=

# Slack (for customer notifications)
SLACK_OAUTH_CLIENT_ID=
SLACK_OAUTH_CLIENT_SECRET=

# =============================================
# MONITORING (Optional)
# =============================================
SENTRY_DSN=

# =============================================
# EMAIL (Platform-level)
# =============================================
RESEND_API_KEY=

# =============================================
# ENCRYPTION
# =============================================
# Key for encrypting sensitive data in database (OAuth tokens, etc.)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=
